<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/itemlist_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="A"
        android:textColor="#FFF"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/itemlist_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/itemlist_circle"
        android:text="Titulo"
        android:layout_marginTop="12dp"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/itemlist_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemlist_txt1"
        android:layout_toRightOf="@id/itemlist_circle"
        android:text="Subtitulo"
        />

    <TextView
        android:id="@+id/itemlist_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemlist_txt2"
        android:layout_toRightOf="@id/itemlist_circle"
        android:text="Subsubtitulo" />

</RelativeLayout>